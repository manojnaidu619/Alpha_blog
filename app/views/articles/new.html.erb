<h1>Create a new form</h1>
 <% @article.errors.full_messages.each do |msg| %>
   <ul>
     <li><%= msg %></li>
   </ul>
 <% end %>

<%= form_for @article do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br><br>
  <%= f.label :description %><br>
  <%= f.text_area :description %><br><br>
  <%= f.submit "SAVE" %><br>
<% end %>
