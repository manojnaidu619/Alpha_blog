<center><h1 id="welcome">Welcome to Alpha blog</h1></center>
<div class="container">
  <div class="jumbotron">
    <div class="root_buttons">
      <center>
      <% if !logged_in? %>
      <%= link_to "LOGIN", login_path ,class:"btn btn-success",role:"button" %>
      <% end %>
      <% if logged_in? %>
        <%= link_to "My Profile", user_path(current_user) , class:"btn btn-outline-success",role:"button" %>
        <%= link_to "LOGOUT", login_path , method: :delete , class:"btn btn-success",role:"button" %>
      <% end %>
      </center>
    </div>
  </div>
</div>
